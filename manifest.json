{
  "manifest_version": 3,
  "name": "Bootcamp Helper — Davi",
  "version": "1.0.0",
  "description": "Extensão MV3 para o Bootcamp II — exemplo funcional com popup, service worker e content script.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Bootcamp Helper",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://developer.chrome.com/*"
      ],
      "js": [
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/logo.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}